{
  "name": "task_management",
  "version": "1.0.0",
  "description": "タスク管理と作業時間計測のためのデスクトップアプリケーション",
  "main": "src/main/main.ts",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development webpack serve --config webpack.config.js",
    "build": "webpack --config webpack.config.js",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx src/ --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit"
  },
  "build": {
    "appId": "com.task_management.app",
    "productName": "Task Management",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sho-uver/task_management.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sho-uver/task_management/issues"
  },
  "homepage": "https://github.com/sho-uver/task_management#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-react": "^7.23.7",
    "@babel/preset-typescript": "^7.23.7",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.15.29",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.1.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.6.0",
    "prettier": "^3.1.1",
    "style-loader": "^3.3.3",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
